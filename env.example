# ============================================
# API Keys (필수)
# ============================================

# Upbit API Keys
# https://upbit.com/mypage/open_api_management 에서 발급
UPBIT_ACCESS_KEY=your_upbit_access_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here

# OpenAI API Key
# https://platform.openai.com/api-keys 에서 발급
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Trading Configuration (선택적)
# ============================================

TICKER=KRW-BTC
BUY_PERCENTAGE=0.95
SELL_PERCENTAGE=0.95
TRADING_MIN_ORDER_AMOUNT=5000.0

# ============================================
# AI Configuration (선택적)
# ============================================

AI_MODEL=gpt-4o-mini
OPENAI_MODEL=gpt-4o-mini

# ============================================
# Database Configuration (자동 설정됨)
# ============================================

POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=trading_bot

# ============================================
# Redis Configuration (자동 설정됨)
# ============================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# Telegram Bot Configuration (알림)
# ============================================

# Telegram 알림 활성화 여부
TELEGRAM_ENABLED=false

# Telegram Bot Token (@BotFather에서 발급)
# 가이드: docs/TELEGRAM_SETUP_GUIDE.md
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID (봇과 대화 시작 후 getUpdates로 확인)
TELEGRAM_CHAT_ID=

# ============================================
# Sentry Configuration (에러 추적, 선택적)
# ============================================

# Sentry 에러 추적 활성화 여부
SENTRY_ENABLED=false

# Sentry DSN (https://sentry.io 에서 발급)
SENTRY_DSN=

# Sentry 환경 설정
SENTRY_ENVIRONMENT=production

# ============================================
# Scheduler Configuration
# ============================================

# 스케줄러 활성화 여부
SCHEDULER_ENABLED=true

# 스케줄러 실행 주기 (분 단위)
SCHEDULER_INTERVAL_MINUTES=60

# ============================================
# Monitoring Configuration
# ============================================

# Prometheus 메트릭 활성화
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Grafana 설정
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ============================================
# Logging Configuration
# ============================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Security (운영 환경에서는 변경 필수!)
# ============================================

SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520